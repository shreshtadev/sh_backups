{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-windows",
            "type": "shell",
            "command": "go build -o sh_backups.exe",
            "options": {
                "env": {
                    "GOOS": "windows",
                    "GOARCH": "amd64"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}